<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- buff line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="BUFF"
            android:textColor="#ffffff" />

    </LinearLayout>

    <!--detail line-->
    <TextView
        android:id="@+id/tv_dungeon_detail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:text="武器: [马化腾之剑]"
        android:textColor="#ffdd55" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dungeon_hp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2000/2000  100%"
            android:textColor="#ff0000" />

        <TextView
            android:id="@+id/tv_dungeon_mp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100/100  100%"
            android:textColor="#0000ff" />

    </LinearLayout>

    <!-- dungeon area -->
    <GridView
        android:id="@+id/gv_dungeon"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"
        android:columnWidth="40dp"
        android:numColumns="8"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#333300"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView android:id="@+id/tv_dungeon_key_up"
                style="@style/DungeonKey"
                android:layout_gravity="center_horizontal"
                android:text="^"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView android:id="@+id/tv_dungeon_key_lt"
                    style="@style/DungeonKey"
                    android:text="@string/left"/>
                <TextView android:id="@+id/tv_dungeon_key_dn"
                    style="@style/DungeonKey"
                    android:text="v"/>
                <TextView android:id="@+id/tv_dungeon_key_rt"
                    style="@style/DungeonKey"
                    android:text="@string/right"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/tv_dungeon_key_z"
                    style="@style/DungeonKey"
                    android:text="Z"/>
                <TextView android:id="@+id/tv_dungeon_key_x"
                    style="@style/DungeonKey"
                    android:text="X"/>
                <TextView android:id="@+id/tv_dungeon_key_spc"
                    android:layout_width="113dp"
                    style="@style/DungeonKey"
                    android:text="SPC"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/tv_dungeon_key_a"
                    style="@style/DungeonKey"
                    android:text="A"/>
                <TextView android:id="@+id/tv_dungeon_key_s"
                    style="@style/DungeonKey"
                    android:text="S"/>
                <TextView android:id="@+id/tv_dungeon_key_d"
                    style="@style/DungeonKey"
                    android:text="D"/>
                <TextView android:id="@+id/tv_dungeon_key_f"
                    style="@style/DungeonKey"
                    android:text="F"/>
                <TextView android:id="@+id/tv_dungeon_key_g"
                    style="@style/DungeonKey"
                    android:text="G"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>